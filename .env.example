# AWS Configuration
AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXXXXXX
AWS_SECRET_ACCESS_KEY=dev-secret-key
AWS_REGION=ap-southeast-1

CDK_DEFAULT_ACCOUNT=your-aws-account-id
CDK_DEFAULT_REGION=ap-southeast-1

# AppSync Configuration - DynamoDB Stack
# Get these values from SystemApiStack outputs after deployment:
# Run: aws cloudformation describe-stacks --stack-name SystemApiStack --query 'Stacks[0].Outputs'
APPSYNC_URL=https://xxxxx.appsync-api.ap-southeast-1.amazonaws.com/graphql
APPSYNC_API_KEY=da2-xxxxx
APPSYNC_API_ID=xxxxx

# AppSync Configuration - Aurora Stack (Optional, for Aurora performance tests)
# Get these values from AuroraApiStack outputs after deployment:
# Run: aws cloudformation describe-stacks --stack-name AuroraApiStack --query 'Stacks[0].Outputs'
# APPSYNC_URL_AURORA=https://xxxxx.appsync-api.ap-southeast-1.amazonaws.com/graphql
# APPSYNC_API_KEY_AURORA=da2-xxxxx

# DynamoDB Configuration
DYNAMODB_TABLE_NAME=SystemApiTable
DYNAMODB_REGION=ap-southeast-1
# For local DynamoDB, uncomment:
# DYNAMODB_ENDPOINT=http://localhost:8000

# Aurora Configuration (for migration and seeding)
# Get these values from AuroraApiStack outputs after deployment:
# Run: aws cloudformation describe-stacks --stack-name AuroraApiStack --query 'Stacks[0].Outputs'
AURORA_CLUSTER_ARN=arn:aws:rds:ap-southeast-1:your-account-id:cluster:auroraapistack-auroracluster-xxxxx
AURORA_SECRET_ARN=arn:aws:secretsmanager:ap-southeast-1:your-account-id:secret:aurora-db-credentials-xxxxx
AURORA_DATABASE=systemapi
AURORA_ENDPOINT=xxxx
# AURORA_ENDPOINT=aurora-systemapi-proxy.xxxxx.ap-southeast-1.rds.amazonaws.com  # Optional, for reference

